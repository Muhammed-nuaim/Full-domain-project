<%- include('../layouts/header.ejs') %>

<div class="container mt-4">
    <h1 class="text-center">Enter Admin Access Key</h1>

    <% if (typeof message !== 'undefined') { %>
        <p class="alert alert-danger text-center"><%= message %></p>
    <% } %>

    <form action="/admin/access" method="post" class="mt-4">
        <div class="mb-3">
            <label for="key" class="form-label">Access Key</label>
            <input type="text" id="key" name="key" class="form-control" placeholder="Enter Key" required>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="mt-3 text-center">
        <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>
