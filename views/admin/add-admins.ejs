<%- include('../layouts/header.ejs') %>

<div class="container mt-4">
    <h1 class="text-center">Add New Admin</h1>

    <% if (typeof message !== 'undefined') { %>
        <p class="alert alert-danger"><%= message %></p>
    <% } %>

    <form action="/admin/add-admins" method="post" class="mt-4">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required>
        </div>

        <div class="mb-3"></div>
            <label for="mobileNumber" class="form-label">Mobile</label>
            <input type="tel" id="mobile" name="mobile" pattern="[0-9]{4,}$" title="minimum contain 4 Numbers" class="form-control" placeholder="Enter Mobile Number" required>
        </div>
       
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
        </div>

        <button type="submit" class="btn btn-primary">Add Admin</button>
    </form>
</div>

<%- include('../layouts/footer.ejs') %>
